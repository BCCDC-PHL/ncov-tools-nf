params {
  profile = false
  metadata = 'NO_FILE'
  primer_scheme_version = '2.0'
}

profiles {
  conda {
    process.conda = "$baseDir/environments/ncov-tools-1.1.yml"
    if (params.cache){
      conda.cacheDir = params.cache
    }
  }
}

manifest {
  mainScript = 'main.nf'
  nextflowVersion = '>=20.01.0'
  version = '0.1.0'
}